<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Bookings Management</title>
</head>
<body>
    <div class="container">
        <h1>Bookings Management</h1>
        
        <div class="summary-section">
            <h2>Summary Statistics</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Bookings</h3>
                    <p class="stat-number"><%= summary.total_bookings %></p>
                </div>
                <div class="stat-card">
                    <h3>Total Tickets Sold</h3>
                    <p class="stat-number"><%= summary.total_tickets %></p>
                </div>
                <div class="stat-card">
                    <h3>Total Revenue</h3>
                    <p class="stat-number">$<%= (summary.total_revenue || 0).toFixed(2) %></p>
                </div>
            </div>
        </div>
        
        <div class="bookings-section">
            <h2>All Bookings</h2>
            <% if (bookings.length === 0) { %>
                <p>No bookings have been made yet.</p>
            <% } else { %>
                <div class="bookings-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>Event</th>
                                <th>Attendee</th>
                                <th>Event Date</th>
                                <th>Full Tickets</th>
                                <th>Concession Tickets</th>
                                <th>Total Cost</th>
                                <th>Booking Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach(booking => { %>
                                <tr>
                                    <td>#<%= booking.booking_id %></td>
                                    <td><%= booking.event_title %></td>
                                    <td><%= booking.attendee_name %></td>
                                    <td><%= new Date(booking.event_date).toLocaleDateString() %></td>
                                    <td><%= booking.full_price_tickets %></td>
                                    <td><%= booking.concession_tickets %></td>
                                    <td>$<%= booking.total_cost.toFixed(2) %></td>
                                    <td><%= new Date(booking.booking_date).toLocaleDateString() %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
        
        <div class="navigation">
            <a href="/organiser" class="button">Back to Organiser Home</a>
        </div>
    </div>
</body>
</html>